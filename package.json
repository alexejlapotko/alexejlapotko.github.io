{
  "name": "rubiks-cube-3d",
  "version": "1.0.0",
  "description": "3D Rubik's Cube implementation in JavaScript",
  "type": "module",
  "main": "cube.js",
  "scripts": {
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "lint:check": "eslint --print-config cube.js",
    "css:build": "postcss cube.css -o dist/cube.css",
    "css:watch": "postcss cube.css -o dist/cube.css --watch",
    "build": "npm run css:build",
    "dev": "npm run css:watch"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "autoprefixer": "^10.4.17",
    "cssnano": "^6.0.3",
    "eslint": "^8.57.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0"
  },
  "keywords": [
    "rubiks-cube",
    "3d",
    "javascript",
    "css3"
  ],
  "author": "",
  "license": "MIT"
}
